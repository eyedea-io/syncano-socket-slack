{
  "name": "@eyedea-sockets/slack",
  "version": "0.0.13",
  "public": true,
  "description": "Integration with Slack",
  "author": "Syncano",
  "repository": "https://github.com/eyedea-io/syncano-socket-slack.git",
  "license": "MIT",
  "keywords": [
    "syncano",
    "socket",
    "slack"
  ],
  "peerDependencies": {
    "@syncano/cli": "0.13.0-alpha.f6ea95d4"
  },
  "dependencies": {
    "@syncano/core": "0.13.0-alpha.f6ea95d4",
    "@syncano/validate": "0.13.0-alpha.f6ea95d4",
    "axios": "^0.18.0",
    "fb": "^2.0.0",
    "slack": "^11.0.0"
  },
  "scripts": {
    "build": "npm run build:src && npm run build:env",
    "build:src": "sh ./bin/compile",
    "build:env": "sh ./bin/compile-env",
    "test": "npm-run-all --parallel test:lint test:audit test:unit test:e2e",
    "codecov": "codecov",
    "test:unit": "NODE_ENV=test jest unit/.*\\.test\\.js",
    "test:e2e": "NODE_ENV=test jest e2e/.*\\.test\\.js",
    "test:audit": "npm audit",
    "test:lint": "standard --fix"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.49",
    "@babel/core": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@syncano/test": "0.13.0-alpha.f6ea95d4",
    "@syncano/test-tools": "0.13.0-alpha.f6ea95d4",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "codecov": "^3.0.2",
    "jest": "^23.1.0",
    "npm-run-all": "^4.1.1",
    "sinon": "^5.1.0",
    "standard": "^10.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [],
    "collectCoverage": true,
    "collectCoverageFrom": [
      ".dist/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "babel": {
    "sourceMaps": "inline",
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "8"
          }
        }
      ]
    ]
  }
}
